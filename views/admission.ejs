  <script>
    // 
    document.getElementById('admission').classList.remove('hover:border-b-[4px]')
    document.getElementById('admission').style.borderBottomWidth="4px"

    // 
    function ValidateEmail(mail) 
      {
      if (/^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/.test(mail))
        {
          return (true)
        }
          return (false)
      }
      document.getElementById('admissionEnquiry').addEventListener('click',(event)=>{

          if(document.getElementById('cnam').value.length==0){
              document.getElementById('cnam-req').style.display='block'
              event.preventDefault()
          }
          else if(document.getElementById('cnam').value.length!=0){
              document.getElementById('cnam-req').style.display='none'
          }

          if(document.getElementById('cdob').value.length==0){
              document.getElementById('cdob-req').style.display='block'
              event.preventDefault()
          }
          else if(document.getElementById('cdob').value.length!=0){
              document.getElementById('cdob-req').style.display='none'
          }

          if(document.getElementById('pnam').value.length==0){
              document.getElementById('pnam-req').style.display='block'
              event.preventDefault()
          }
          else if(document.getElementById('pnam').value.length!=0){
              document.getElementById('pnam-req').style.display='none'
          }
          
          if(document.getElementById('occup').value.length==0){
              document.getElementById('occup-req').style.display='block'
              event.preventDefault()
          }
          else if(document.getElementById('occup').value.length!=0){
              document.getElementById('occup-req').style.display='none'
          }

          if(document.getElementById('contNo').value.length==0){
              document.getElementById('contNo-req').style.display='block'
              document.getElementById('contNo-format').style.display='none'
              document.getElementById('contNo-start').style.display='none'
              event.preventDefault()
          }
          else if(document.getElementById('contNo').value.length!=0){
              if(document.getElementById('contNo').value[0]=='0'){
                  document.getElementById('contNo-req').style.display='none'
                  document.getElementById('contNo-format').style.display='none'
                  document.getElementById('contNo-start').style.display='block'
                  event.preventDefault()
              }
              else{
                  if(document.getElementById('contNo').value.length==10){
                      document.getElementById('contNo-req').style.display='none'
                      document.getElementById('contNo-format').style.display='none'
                      document.getElementById('contNo-start').style.display='none'
                  }
                  else{
                      document.getElementById('contNo-req').style.display='none'
                      document.getElementById('contNo-format').style.display='block'
                      document.getElementById('contNo-start').style.display='none'
                      event.preventDefault()
                  }
              }
          }

          if(document.getElementById('emailId').value.length==0){
              document.getElementById('emailId-req').style.display='block'
              event.preventDefault()
          }
          else if(document.getElementById('emailId').value.length!=0){
              if(ValidateEmail(document.getElementById('emailId').value)){
                  document.getElementById('emailId-req').style.display='none'
                  document.getElementById('emailId-format').style.display='none'
              }
              else{
                  document.getElementById('emailId-req').style.display='none'
                  document.getElementById('emailId-format').style.display='block'
                  event.preventDefault()
              }
          }

          if(document.getElementById('address').value.length==0){
              document.getElementById('address-req').style.display='block'
              event.preventDefault()
          }
          else if(document.getElementById('address').value.length!=0){
              document.getElementById('address-req').style.display='none'
          }
      })

      // 
      if(document.getElementById('addmissionEnquiryFilledAlert')){
        Swal.fire({
          template: '#addmissionEnquiryFilledAlert'
        })
      }
  </script>